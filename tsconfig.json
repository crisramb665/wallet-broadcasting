{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": ".",
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "../node_modules"
    ]
}